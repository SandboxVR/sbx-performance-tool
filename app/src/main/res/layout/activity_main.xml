<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_surface"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_hero"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingTop="26dp"
            android:paddingEnd="18dp"
            android:paddingBottom="22dp">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/icon_disc"
                android:foregroundGravity="center">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:alpha="0.95"
                    android:src="@android:drawable/ic_menu_manage"
                    android:tint="@color/sbx_text_primary" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/app_name"
                android:textColor="@color/sbx_text_primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="@string/intro_text"
                android:textColor="@color/sbx_text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/panel_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_label"
                android:textAllCaps="true"
                android:textColor="@color/sbx_text_muted"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/chip_status"
                android:lineSpacingExtra="2dp"
                android:paddingStart="14dp"
                android:paddingTop="12dp"
                android:paddingEnd="14dp"
                android:paddingBottom="12dp"
                android:textColor="@color/sbx_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/panel_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/control_label"
                android:textAllCaps="true"
                android:textColor="@color/sbx_text_muted"
                android:textSize="11sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_primary"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="@string/start_service"
                android:textAllCaps="false"
                android:textColor="@color/sbx_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_secondary"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="@string/stop_service"
                android:textAllCaps="false"
                android:textColor="@color/sbx_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_ghost"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="@string/refresh"
                android:textAllCaps="false"
                android:textColor="@color/sbx_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/panel_endpoint"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/endpoint_label"
                android:textAllCaps="true"
                android:textColor="@color/sbx_text_muted"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endpointText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/sbx_text_secondary"
                android:textIsSelectable="true"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/chip_internal"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="@string/internal_use_only"
            android:textAllCaps="true"
            android:textColor="@color/sbx_text_muted"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
